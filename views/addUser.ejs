<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

       <div class="container mt-2">
          <a href="/" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>

<div class="container mt-5">

     <% if(msg !="" ){%>
      <div class="alert alert-success text-center " role="alert" id="addMsg">

          <%=msg %>
      </div>


      <%} %>

  <div class="container mt-5 bg-primary text-center text-light fw-30 p-2">
    <h3>Add User Form</h3>
  </div>
<form action="/adduser" method="POST" >
    <div class="form-group mt-3">
      <label for="exampleInputEmail1"><h5>Name</h5></label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userName" placeholder="Enter User Name" required>
     
    </div>
    <div class="form-group  mt-3">
      <label for="exampleInputEmail1"><h5>Email address</h5></label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userEmail" placeholder="Enter User Email">
     
    </div>
    <div class="form-group  mt-3">
      <label for="exampleInputPassword1"><h5>Mobile</h5></label>
      <input type="number" class="form-control" id="exampleInputPassword1" name="userNumber" placeholder="Enter User Contact ">

    </div>
    <div class="form-group  mt-3">
        <label for="exampleInputEmail1"><h5>Amount</h5></label>
        <input type="Amount" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userAmount" placeholder="Enter Amount">

    <button type="submit" class="btn btn-primary mt-3 text-center">Submit</button>
  </form>
</div>

    <%- include('./components/bootstrapScript') -%>
    <script>
        let alert = document.getElementById('addMsg');
    setTimeout(() => {
        alert.style.visibility = "hidden"
    }, 2000)
    </script>
</body>
</html>